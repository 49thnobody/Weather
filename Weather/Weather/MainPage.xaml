<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Weather.MainPage"
             Appearing="ContentPage_Appearing">

    <StackLayout>
        <Button Text="Settings"
                x:Name="buttonSettings"
                Clicked="buttonSettings_Clicked"/>

        <Picker x:Name="pickerCities"
                SelectedIndexChanged="picerCities_SelectedIndexChanged"
                SelectedIndex="0"/>
        <Picker x:Name="pickerSeason"
                SelectedIndexChanged="pickerSeason_SelectedIndexChanged"
                SelectedIndex="0"/>

        <Label x:Name="labelCityType"/>
        <Label x:Name="labelTemperature"/>
    </StackLayout>

</ContentPage>
